{
  "name": "jazz-run",
  "bin": "./dist/index.js",
  "type": "module",
  "license": "MIT",
  "version": "0.8.21",
  "scripts": {
    "dev": "tsup src/index.ts --format esm --watch",
    "test": "vitest --run --root ../../ --project jazz-run",
    "test:watch": "vitest --watch --root ../../ --project jazz-run",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write",
    "typecheck": "tsc --noEmit --sourceMap -p tsconfig.json",
    "build": "rm -rf ./dist && tsup src/index.ts --format esm",
    "build-and-run": "pnpm turbo build && chmod +x ./dist/index.js && ./dist/index.js sync --in-memory",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@effect/cli": "^0.41.2",
    "@effect/platform-node": "^0.57.2",
    "@effect/printer": "^0.34.5",
    "@effect/printer-ansi": "^0.34.5",
    "@effect/schema": "^0.71.1",
    "@effect/typeclass": "^0.25.5",
    "cojson": "workspace:0.8.21",
    "cojson-storage-sqlite": "workspace:0.8.21",
    "cojson-transport-ws": "workspace:0.8.21",
    "effect": "^3.6.5",
    "jazz-tools": "workspace:0.8.21",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/ws": "^8.5.5",
    "typescript": "^5.3.3"
  }
}
