{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {},
  "tasks": {
    "jazz-nodejs#build": {
      "dependsOn": ["cojson-transport-ws#build"]
    },
    "build": {
      "env": ["RESEND_API_KEY", "RESEND_AUDIENCE_ID"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "type-check": {},
    "//#format-and-lint": {},
    "//#format-and-lint:fix": {
      "cache": false
    }
  }
}
